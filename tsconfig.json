{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "removeComments": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
